
<div class="container">
  <div class="intro">
    <div class="intro-left centered-flexbox">
      <div>
        <h1>renodor</h1>
        <h2>Fullstack web developer, specialized in Ruby on Rails</h2>
        <p>I build cool web applications. I can help you design and code all your digital content. Currently working full time as a Rails developper for <a href="https://www.bspk.com/" target="_blank">BSPK</a>.</p>
      </div>
    </div>
    <div class="intro-right">
      <%= image_tag("renodor-avatar.png") %>
    </div>
  </div>

  <div class="section" id="services">
    <h2 class="title">Services</h2>
    <div class="service-cards">
      <div class="service">
        <i class="fa-solid fa-code"></i>
        <p>Backend<br />web development</p>
      </div>
      <div class="service">
        <i class="fa-solid fa-pencil"></i>
        <p>Frontend<br />web development</p>
      </div>
    </div>
  </div>
  <div class="section" id="projects">
    <h2 class="title translate-150">Projects</h2>
    <div class="project-cards">
      <% @projects.each do |project| %>
          <div class="project-card">
            <div class="project-header">
              <h3><%= project.name %></h3>
              <% project.services.each do |service| %>
                <%= service.icon_tag %>
              <% end %>
            </div>
            <%= cl_image_tag project.cover_photo.key, width: 686, crop: :fit %>
            <%= link_to "", project_path(project) %>
          </div>
      <% end %>
    </div>
  </div>

  <div class="section" id="contact">
    <h2 class="title">Get in Touch</h2>
    <div class="social">
      <div class="social-icons">
        <a href="https://www.linkedin.com/in/renauddor/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        <a href="https://github.com/renodor" target="_blank"><i class="fab fa-github"></i></a>
        <a href="https://twitter.com/Renodor" target="_blank"><i class="fab fa-twitter"></i></a>
        <i class="fas fa-envelope"></i>
      </div>
      <span class="written-email"></span>
    </div>
    <div class="contact-form">
      <%= form_for(@contact, remote: true)  do |f| %>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <%= f.text_field :name, placeholder: "name", class: "form-control"%>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group <%= @email_errors ? 'form-group-error' : '' %>">
              <%= f.text_field :email, placeholder: "email", class: "form-control" %>
              <% if @email_errors %>
                <span class="form-error-message"><%= @email_errors.first %></span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="form-group <%= @message_errors ? 'form-group-error' : '' %>">
          <%= f.text_area :message, placeholder: "message", class: "form-control" %>
            <% if @message_errors %>
              <span class="form-error-message"><%= @message_errors.first %></span>
            <% end %>
        </div>
        <div class="actions">
          <%= f.submit "SEND", class: "ren-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
