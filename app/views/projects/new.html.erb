<div class="container my-5">
  <%= simple_form_for(@project) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :order %>
    <%= f.input :web_development %>
    <%= f.input :marketing %>
    <%= f.input :graphic_design %>
    <%= f.input :technologies %>
    <%= f.input :cover_photo, as: :file, label: 'Cover Photo (686*515px)' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
</div>
