<%= form_with model: project, class: "flex flex-col gap-6" do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: "border border-dark-gray border-2 rounded-md" %>
  <%= f.text_area :description, placeholder: "Description", class: "border border-dark-gray border-2 rounded-md h-72" %>
  <%= f.text_field :url, placeholder: "Url", class: "border border-dark-gray border-2 rounded-md" %>
  <%= f.text_field :github_repo, placeholder: "Github repo", class: "border border-dark-gray border-2 rounded-md" %>
  <%= f.number_field :order, placeholder: "Order", class: "border border-dark-gray border-2 rounded-md" %>
  <%=
    f.select :service_ids,
    services.map { |service| [service.name, service.id ] },
    { multiple: true },
    { class: "border border-dark-gray border-2 rounded-md" }
  %>
  <%=
    f.select :technology_ids,
    technologies.map { |tech| [tech.name, tech.id ] },
    { multiple: true },
    { class: "border border-dark-gray border-2 rounded-md" }
  %>
  <div class="flex flex-col">
    <%= f.file_field :cover_photo, as: :file %>
    <small>Cover Photo (686*515px)</small>
  </div>
  <%= f.file_field :photos, as: :file, multiple: true %>
  <%= f.submit class: "w-full bg-flashy-green py-2 px-6 rounded-md cursor-pointer font-bold hover:shadow-flashy-dark transition duration-250" %>
<% end %>